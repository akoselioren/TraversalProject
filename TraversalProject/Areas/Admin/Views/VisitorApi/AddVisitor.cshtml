@model VisitorViewModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api ile ziyaretçi ekleme</h1>
<br />

<form method="post">
    <label>Ziyaretçi Ad Soyad:</label>
    <input type="text" asp-for="NameSurname" class="form-control" />
    <br />
    <label>Mail adresi:</label>
    <input type="text" asp-for="Mail" class="form-control" />
    <br />
    <label>Ziyaretçi Şehri:</label>
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Ziyaretçi Ülkesi:</label>
    <input type="text" asp-for="Country" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">Ziyaretçi Ekle</button>
</form>
